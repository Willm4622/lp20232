((nota1))
print(f'nota1 tem valor {nota1} e é do tipo {type(nota1)}') 
nota2 = 7,3 
print(f' nota2 tem valor {nota2} e é do tipo {type(nota2)}') 
aluno = 'maria'
print(f' nota2 tem valor {nota2} e é do tipo {type(aluno)}') 
media = (nota1 + nota2) / 2 
print (f'{aluno} / t(nota1) / {nota2} / t {media}') #/t tabula e /n nova

