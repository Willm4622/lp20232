#leia dos valores numéricos e apresente o resto da divisão 
v1 = int(input('valor 1: '))
v2 = int(input('valor 2: '))
resto = v1 % v2 
print( f' {v1} % {v1} = {resto}' )

#leia o valor de um produto e o desconte em reais e apresente o valor final a pagar

v1 = int(input('valor 1: '))
v2 = int(input('valor 2: '))
desconto = v1 % v2 
print( f' {v1} % {v1} = {desconto}' )

